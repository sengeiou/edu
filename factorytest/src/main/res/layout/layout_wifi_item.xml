<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/wifi_swipe"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    >

    <RelativeLayout
        android:id="@+id/lay_wifi_info"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/img_wifi_select"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/network_wifi_select"
            android:visibility="invisible"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/img_wifi_select"
            android:layout_marginLeft="10dp"
            >

            <TextView
                android:id="@+id/txt_wifi_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical|left"
                android:layout_toLeftOf="@+id/img_wifi_pwd"
                android:layout_marginRight="5dp"
                android:textSize="15sp"
                android:textColor="#000000"
                android:ellipsize="end"
                android:singleLine="true"
                />

            <ImageView
                android:id="@+id/img_wifi_pwd"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/img_wifi_logo"
                android:layout_marginRight="10dp"
                android:src="@drawable/network_wifi_logo_pwd"
                />

            <ImageView
                android:id="@+id/img_wifi_logo"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                />

            <View
                android:id="@+id/vew_spy"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="#F0F3F3" />

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>


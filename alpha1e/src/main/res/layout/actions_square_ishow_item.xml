<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ly_detail_square"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/A11" />

    <include
        android:id="@+id/rl_square_info"
        layout="@layout/actions_square_ishow_item_header" />

    <TextView
        android:id="@+id/txt_square_description"
        android:layout_below="@+id/rl_square_info"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:textColor="@color/T2"
        android:textSize="14sp"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/layout_square_main"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_height="194dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        >

        <ImageView
            android:id="@+id/video_actions_square"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="194dp"
            />

        <ImageView
            android:id="@+id/img_play_actions_square"
            android:padding="10dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:src="@drawable/actions_square_detail_play"/>

        <ImageView
            android:id="@+id/img_square_content"
            android:layout_alignParentLeft="true"
            android:scaleType="fitStart"
            android:layout_width="match_parent"
            android:layout_height="194dp"
            />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

    <include
        android:id="@+id/layout_square_action_detail"
        layout="@layout/layout_square_actions_item"
        />

    <include
        android:id="@+id/layout_square_footer"
        layout="@layout/actions_square_ishow_item_footer"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/A11" />

    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/B5"
        />

</LinearLayout>

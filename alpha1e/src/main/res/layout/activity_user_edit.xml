<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/sec_play_low"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/sec_play_low"
        >

        <RelativeLayout
            android:id="@+id/rl_user_title"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageView
                android:id="@+id/iv_main_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:src="@drawable/btn_back"/>

            <TextView
                android:id="@+id/tv_main_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/black"
                android:textSize="20sp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="@color/gray_dft"/>
        </RelativeLayout>

        <com.ubt.alpha1e.ui.custom.ShapedImageView
            android:id="@+id/img_head"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_below="@+id/rl_user_title"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/default_head"
            android:scaleType="fitXY"
            app:shape_mode="circle"/>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_head"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bg_edittext_round"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                >

                <TextView
                    style="@style/text_userinfo_left_style"
                    android:layout_alignParentLeft="true"
                    android:text="昵称"/>

                <TextView
                    android:id="@+id/tv_user_name"
                    style="@style/text_userinfo_right_style"
                    android:drawableRight="@null"
                    android:text="leon"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/sec_txt_num"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                >

                <TextView
                    style="@style/text_userinfo_left_style"
                    android:layout_alignParentLeft="true"
                    android:text="性别"/>

                <!-- 定义一组单选框 -->
                <RadioGroup
                    android:id="@+id/radio_group_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal">
                    <!-- 定义两个单选框 -->
                    <RadioButton
                        android:id="@+id/male"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/radio_select_sex"
                        android:checked="true"
                        android:text="男"
                        android:textColor="@color/black"
                        />

                    <RadioButton
                        android:id="@+id/female"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:button="@drawable/radio_select_sex"
                        android:text="女"
                        android:textColor="@color/black"
                        />
                </RadioGroup>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/sec_txt_num"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                >

                <TextView
                    style="@style/text_userinfo_left_style"
                    android:layout_alignParentLeft="true"
                    android:text="年龄"/>

                <TextView
                    android:id="@+id/tv_user_age"
                    style="@style/text_userinfo_right_style"
                    android:text="10"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/sec_txt_num"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                >

                <TextView
                    style="@style/text_userinfo_left_style"
                    android:layout_alignParentLeft="true"
                    android:text="年级"/>

                <TextView
                    android:id="@+id/tv_user_grade"
                    style="@style/text_userinfo_right_style"
                    android:text="一年级"
                    />

            </RelativeLayout>

        </LinearLayout>


    </RelativeLayout>
</ScrollView>
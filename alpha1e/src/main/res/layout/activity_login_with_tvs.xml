<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login"

    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_jiaobiao"
        android:scaleType="fitXY"
        />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/tv_robot_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Alpha Ebot"
            android:textColor="#fff"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="27sp"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="智能教育人形机器人"
            android:textColor="#AFBFC8"
            android:textSize="16sp"
            />



        <RelativeLayout
            android:id="@+id/rl_edu_login"
            android:layout_width="154dp"
            android:layout_height="45.33dp"
            android:layout_gravity="center"
            android:background="@drawable/btn_learn"
            android:layout_marginTop="36dp"
            android:gravity="center"
            >

            <ImageView
                android:id="@+id/iv_edu_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_learn"
                android:scaleType="fitXY"
                android:paddingLeft="8dp"
                android:paddingTop="6dp"
                />

            <TextView
                android:id="@+id/tv_edu_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_edu_login"
                android:paddingLeft="10dp"
                android:text="学习模式"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="#FFFFFF"/>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_wx_login"
            android:layout_width="154dp"
            android:layout_height="45.33dp"
            android:layout_gravity="center"
            android:background="@drawable/bt_wechat"
            android:layout_marginTop="36dp"
            android:gravity="center"
            >

            <ImageView
                android:id="@+id/iv_wx_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_log_wechat"
                android:scaleType="fitCenter"
                android:paddingLeft="8dp"
                />

            <TextView
                android:id="@+id/tv_wx_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_wx_login"
                android:paddingLeft="10dp"
                android:text="微信登录"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="#FFFFFF"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_qq_login"
            android:layout_width="154dp"
            android:layout_height="45.33dp"
            android:layout_marginTop="16dp"
            android:layout_gravity="center"
            android:background="@drawable/bt_qq"
            android:gravity="center"
            >

            <ImageView
                android:id="@+id/iv_qq_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_log_qq"
                android:scaleType="fitCenter"
                android:visibility="visible"
                />

            <TextView
                android:id="@+id/tv_qq_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_qq_login"
                android:paddingLeft="10dp"
                android:gravity="center"
                android:text="QQ登录"
                android:textSize="16sp"
                android:textColor="#FFFFFF"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            >

            <TextView
                android:id="@+id/tv1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="QQ与微信账号的资产和权限不互通"
                android:textColor="#AFBFC8"
                android:gravity="center"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/tv1"
                android:gravity="center"
                >

                <ImageView
                    android:id="@+id/iv_privacy"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/login_privacy_selector"
                    android:layout_centerVertical="true"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="5dp"
                    android:paddingTop="7dp"
                    />

                <TextView
                    android:id="@+id/tv_privacy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/iv_privacy"
                    android:text="同意《用户许可协议》《隐私政策》"
                    android:textColor="#AFBFC8"
                    android:textSize="12sp"
                    android:layout_centerVertical="true"
                    />





            </RelativeLayout>




        </RelativeLayout>





    </LinearLayout>






</LinearLayout>
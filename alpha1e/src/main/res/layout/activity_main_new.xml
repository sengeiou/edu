<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainui"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main"
    android:orientation="vertical">

    <!--android:background="#7fff0000"-->
    <!--<pl.droidsonroids.gif.GifImageView-->
    <ImageView
        android:id="@+id/cartoon_body_touch_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/main_robot_background"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/charging"
        android:layout_width="48dp"
        android:layout_height="29dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:background="@drawable/power5"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/ll_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_toLeftOf="@+id/charging"
        android:layout_marginRight="25dp">

        <ImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@drawable/ic_home_action"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ui_main_right_icon2"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="@color/white"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_remote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_toLeftOf="@+id/ll_action"
        android:layout_marginRight="50dp">

        <ImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@drawable/ic_home_controller"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ui_main_right_icon"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="@color/white"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_program"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@+id/charging"
        android:layout_marginLeft="25dp">

        <ImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@drawable/ic_home_program"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ui_main_right_icon3"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="@color/white"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_community"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_toRightOf="@+id/ll_program"
        android:layout_marginLeft="50dp">

        <ImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@drawable/ic_home_community"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ui_main_right_icon4"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="@color/white"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/charging_dot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="13dp"
        android:background="@drawable/charging_normal_dot"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/cartoon_action"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_above="@+id/charging"
        android:layout_centerHorizontal="true"
        android:background="@drawable/img_hoem_robot"
        android:layout_marginBottom="10dp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/buddle_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="210dp"
        android:layout_toRightOf="@+id/cartoon_action"
        android:layout_marginLeft="-75dp"
        android:layout_marginTop="30dp"
        android:paddingRight="18dp"
        android:paddingBottom="20dp"
        android:paddingLeft="23dp"
        android:paddingTop="10dp"
        android:background="@drawable/bg_bubble_text"
        android:text="嗨，我是阿尔法"
        android:gravity="center_vertical|left"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:visibility="visible" />

    <View
        android:id="@+id/v_vertical_center"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:visibility="invisible"
        android:layout_centerVertical="true">

    </View>

    <RelativeLayout
        android:id="@+id/rl_hibits_event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/v_vertical_center"
        android:layout_marginLeft="38dp"
        android:layout_marginBottom="-15dp"
        >

        <ImageView
            android:id="@+id/iv_habits"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:background="@drawable/img_home_clock"
            />

        <TextView
            android:id="@+id/tv_hibits_event_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:text="起床"
            android:textSize="16sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/tv_hibits_event_name"
            android:textColor="@color/T31"
            android:text="AM 7:00"
            android:textSize="12sp"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_course_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/v_vertical_center"
        android:layout_alignParentRight="true"
        android:layout_marginRight="52dp"
        android:layout_marginBottom="-15dp"
        >

        <ImageView
            android:id="@+id/iv_course"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:background="@drawable/ic_home_course"
            />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/right_icon"
            style="@style/main_right_button"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/top_icon3"
            android:drawableTop="@drawable/main_remote"
            android:tag="course"
            android:text="@string/ui_main_right_icon"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/right_icon2"
            style="@style/main_right_button"
            android:layout_below="@+id/charging"
            android:tag="action"
            android:text="@string/ui_main_right_icon2"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/right_icon3"
            style="@style/main_right_button"
            android:layout_below="@+id/right_icon2"
            android:drawableTop="@drawable/main_programming"
            android:tag="programming"
            android:text="@string/ui_main_right_icon3"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/right_icon4"
            style="@style/main_right_button"
            android:layout_below="@+id/right_icon3"
            android:drawableTop="@drawable/main_community"
            android:tag="community"
            android:text="@string/ui_main_right_icon4"
            android:textSize="12sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/top_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="16dp"
        android:drawableTop="@drawable/main_center" />

    <TextView
        android:id="@+id/top_icon2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/top_icon"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@+id/top_icon"
        android:drawableTop="@drawable/main_connect" />

    <TextView
        android:id="@+id/top_icon2_disconnect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/top_icon2"
        android:layout_marginTop="16dp"
        android:drawableTop="@drawable/main_disconnected"
        android:visibility="visible" />

    <TextView
        android:id="@+id/top_icon3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        android:drawableTop="@drawable/ic_alli_normal1" />
    <ImageView
        android:id="@+id/indicator0"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="26dp"
        android:layout_marginRight="32dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/indicator0" />
    <ImageView
        android:id="@+id/indicator"
    android:layout_width="25dp"
    android:layout_height="25dp"
    android:layout_marginTop="26dp"
    android:layout_marginRight="32dp"
    android:layout_alignParentRight="true"
    android:background="@drawable/globalactionindicator_animation" />

    <RelativeLayout
        android:id="@+id/touch_control"
        android:layout_width="315dp"
        android:layout_height="315dp"
        android:layout_above="@+id/charging"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-50dp"
        android:visibility="gone">
        <!--android:background="@color/bgColor_overlay"-->
        <ImageView
            android:id="@+id/cartoon_head"
            android:layout_width="89.5dp"
            android:layout_height="84.5dp"
            android:layout_marginLeft="112.5dp"
            android:layout_marginTop="21.5dp"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/cartoon_chest"
            android:layout_width="89.5dp"
            android:layout_height="75dp"
            android:layout_marginLeft="112.5dp"
            android:layout_marginTop="106dp"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/cartoon_left_hand"
            android:layout_width="41dp"
            android:layout_height="105.5dp"
            android:layout_marginLeft="71.5dp"
            android:layout_marginTop="106dp"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/cartoon_right_hand"
            android:layout_width="41dp"
            android:layout_height="105.5dp"
            android:layout_marginLeft="202dp"
            android:layout_marginTop="106dp"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/cartoon_left_leg"
            android:layout_width="42dp"
            android:layout_height="112dp"
            android:layout_marginLeft="112.5dp"
            android:layout_marginTop="181dp"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/cartoon_right_leg"
            android:layout_width="42dp"
            android:layout_height="112dp"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="181dp"
            android:visibility="visible" />
    </RelativeLayout>
</RelativeLayout>
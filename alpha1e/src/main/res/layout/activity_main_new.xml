<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainui"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main"
    android:orientation="vertical">

    <!--android:background="#7fff0000"-->
    <ImageView
        android:id="@+id/gif_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        />
    <ImageView
        android:id="@+id/cartoon_body_touch_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/main_robot_background"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/charging"
        android:layout_width="48dp"
        android:layout_height="29dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:background="@drawable/power5"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/ll_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_toLeftOf="@+id/charging"
        android:layout_marginRight="25dp">

        <ImageView
            android:id="@+id/iv_action"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_home_action"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ui_main_right_icon2"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="@color/white"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_remote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_toLeftOf="@+id/ll_action"
        android:layout_marginRight="50dp">

        <ImageView
            android:id="@+id/iv_remote"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_home_controller"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ui_main_right_icon"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="@color/white"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_program"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@+id/charging"
        android:layout_marginLeft="25dp">

        <ImageView
            android:id="@+id/iv_program"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_home_program"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ui_main_right_icon3"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="@color/white"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_community"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_toRightOf="@+id/ll_program"
        android:layout_marginLeft="50dp">

        <ImageView
            android:id="@+id/iv_community"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_home_community"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ui_main_right_icon4"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="@color/white"/>

    </LinearLayout>


    <ImageView
        android:id="@+id/cartoon_action"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/img_hoem_robot"
        android:visibility="visible" />

    <TextView
        android:id="@+id/buddle_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="180dp"
        android:layout_toRightOf="@+id/cartoon_action"
        android:layout_marginLeft="-75dp"
        android:layout_marginTop="40dp"
        android:paddingRight="18dp"
        android:paddingBottom="20dp"
        android:paddingLeft="23dp"
        android:paddingTop="10dp"
        android:background="@drawable/bg_bubble_text"
        android:text="嗨，我是阿尔法"
        android:gravity="center_vertical|left"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:visibility="visible" />

    <View
        android:id="@+id/v_vertical_center"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:visibility="invisible"
        android:layout_centerVertical="true">

    </View>

    <RelativeLayout
        android:id="@+id/rl_hibits_event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/v_vertical_center"
        android:layout_marginLeft="26dp"
        android:layout_marginBottom="-18dp"
        >

        <ImageView
            android:id="@+id/iv_habits"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:background="@drawable/img_home_clock"
            />

        <TextView
            android:id="@+id/tv_hibits_event_name"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignTop="@+id/iv_hibits_reminder"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="起床"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/iv_hibits_reminder"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"
            android:src="@drawable/ic_remind_none"
            android:visibility="invisible"
            />

        <TextView
            android:id="@+id/tv_habits_event_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/tv_hibits_event_name"
            android:layout_marginTop="4dp"
            android:textColor="@color/T31"
            android:text="AM 7:00"
            android:textSize="14sp"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_course_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/v_vertical_center"
        android:layout_alignParentRight="true"
        android:layout_marginRight="59dp"
        android:layout_marginBottom="-15dp"
        >

        <ImageView
            android:id="@+id/iv_course"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:background="@drawable/ic_home_course"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_top_icon"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="26dp">

        <com.ubt.alpha1e.ui.custom.ShapedImageView
            android:id="@+id/top_icon"
            android:layout_width="41dp"
            android:layout_height="41dp"
            android:layout_centerInParent="true"
            android:scaleType="fitXY"
            app:shape_mode="circle"
            android:src="@drawable/main_center" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/img_home_mine"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/top_icon2"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:layout_toRightOf="@+id/rl_top_icon"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:scaleType="fitXY"
        android:src="@drawable/main_connect" />

    <ImageView
        android:id="@+id/top_icon2_disconnect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/top_icon2"
        android:layout_marginTop="15dp"
        android:src="@drawable/main_disconnected"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/top_icon4"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:layout_alignTop="@+id/top_icon2"
        android:layout_toRightOf="@id/top_icon2"
        android:layout_marginLeft="20dp"
        android:scaleType="fitXY"
        android:src="@drawable/main_voice_cmd" />


    <ImageView
        android:id="@+id/top_icon3"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="26dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/ic_alli_normal1" />

    <ImageView
        android:id="@+id/indicator0"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="36dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/indicator0" />

    <ImageView
        android:id="@+id/indicator"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="36dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/globalactionindicator_animation"
        android:visibility="visible"/>


    <RelativeLayout
        android:id="@+id/touch_control"
        android:layout_width="315dp"
        android:layout_height="315dp"
        android:layout_above="@+id/charging"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-50dp"
        android:visibility="gone">
        <!--android:background="@color/bgColor_overlay"-->
        <ImageView
            android:id="@+id/cartoon_head"
            android:layout_width="89.5dp"
            android:layout_height="84.5dp"
            android:layout_marginLeft="112.5dp"
            android:layout_marginTop="21.5dp"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/cartoon_chest"
            android:layout_width="89.5dp"
            android:layout_height="75dp"
            android:layout_marginLeft="112.5dp"
            android:layout_marginTop="106dp"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/cartoon_left_hand"
            android:layout_width="41dp"
            android:layout_height="105.5dp"
            android:layout_marginLeft="71.5dp"
            android:layout_marginTop="106dp"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/cartoon_right_hand"
            android:layout_width="41dp"
            android:layout_height="105.5dp"
            android:layout_marginLeft="202dp"
            android:layout_marginTop="106dp"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/cartoon_left_leg"
            android:layout_width="42dp"
            android:layout_height="112dp"
            android:layout_marginLeft="112.5dp"
            android:layout_marginTop="181dp"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/cartoon_right_leg"
            android:layout_width="42dp"
            android:layout_height="112dp"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="181dp"
            android:visibility="visible" />
    </RelativeLayout>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"

    >

    <RelativeLayout
        android:layout_width="120dp"
        android:layout_height="120dp"
        >

        <FrameLayout
            android:id="@+id/fl_action_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_cources"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:scaleType="fitXY"
                />

            <ImageView
                android:id="@+id/iv_action_lock"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:alpha="150"
                android:scaleType="centerInside"
                android:src="@drawable/img_locked"
                />
        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@+id/fl_action_top"
            android:background="@drawable/bg_main_course"

            >

            <TextView
                android:id="@+id/tv_iction_cources_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="课程原理"
                android:textColor="@color/black"
                android:textSize="14sp"/>

            <ImageView
                android:id="@+id/iv_action_complete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/img_action_completed"/>

        </RelativeLayout>


    </RelativeLayout>


</RelativeLayout>
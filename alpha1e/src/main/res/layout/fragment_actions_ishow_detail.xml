   <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/B5"
    tools:context=".ui.fragment.IShowFragment">

    <com.ubt.alpha1e_edu.library.ptr.PtrClassicFrameLayout
        android:id="@+id/refresh_fragment_square"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:cube_ptr="http://schemas.android.com/apk/res-auto"
        cube_ptr:ptr_duration_to_close="200"
        cube_ptr:ptr_duration_to_close_header="1000"
        cube_ptr:ptr_keep_header_when_refresh="true"
        cube_ptr:ptr_pull_to_fresh="false"
        cube_ptr:ptr_ratio_of_header_height_to_refresh="1.2"
        cube_ptr:ptr_resistance="1.2"
        >

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview_square"
            android:background="@color/B6"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </android.support.v7.widget.RecyclerView>
    </com.ubt.alpha1e_edu.library.ptr.PtrClassicFrameLayout>

       <include
           layout="@layout/layout_my_dynamic_empty" />
</FrameLayout>

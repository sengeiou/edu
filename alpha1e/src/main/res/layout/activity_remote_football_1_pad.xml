<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_remote_inner">

    <include layout="@layout/layout_title_back_mvp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_title"
        android:layout_marginTop="-12dp"
        android:splitMotionEvents="false"
        android:background="@drawable/bg_remote_contraler">

        <RelativeLayout
            android:id="@+id/lay_crl_main"
            android:layout_width="280dp"
            android:layout_height="280dp"
            android:layout_marginLeft="75dp"
            android:splitMotionEvents="false"
            android:layout_marginTop="55dp">

            <ImageButton
                android:id="@+id/btn_up"
                android:layout_width="100dp"
                android:layout_height="98dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/remoter_gohead_select" />

            <ImageButton
                android:id="@+id/btn_down"
                android:layout_width="100dp"
                android:layout_height="98dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/remoter_down_select" />

            <ImageButton
                android:id="@+id/btn_left"
                android:layout_width="100dp"
                android:layout_height="98dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@drawable/remoter_left_select" />

            <ImageButton
                android:id="@+id/btn_right"
                android:layout_width="100dp"
                android:layout_height="98dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/remoter_right_select" />
        </RelativeLayout>

        <ImageButton
            android:id="@+id/btn_stop"
            android:layout_width="100dp"
            android:layout_height="98dp"
            android:layout_centerInParent="true"
            android:background="@drawable/remoter_stop_select" />


        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"
            android:splitMotionEvents="false"
            android:layout_marginLeft="73dp">

            <ImageButton
                android:id="@+id/btn_to_left"
                android:layout_width="113dp"
                android:layout_height="79dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="13dp"
                android:background="@drawable/remoter_turnleft_select" />

            <ImageButton
                android:id="@+id/btn_to_right"
                android:layout_width="113dp"
                android:layout_height="79dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="13dp"
                android:background="@drawable/remoter_turnright_select" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="78dp"
            android:layout_marginTop="84dp"
            android:layout_marginRight="86dp"
            android:splitMotionEvents="false"
            >

            <ImageButton
                android:id="@+id/btn_1"
                android:layout_width="100dp"
                android:layout_height="98dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true" />

            <ImageButton
                android:id="@+id/btn_3"
                android:layout_width="100dp"
                android:layout_height="98dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true" />

            <ImageButton
                android:id="@+id/btn_5"
                android:layout_width="100dp"
                android:layout_height="98dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true" />

            <ImageButton
                android:id="@+id/btn_2"
                android:layout_width="100dp"
                android:layout_height="98dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true" />

            <ImageButton
                android:id="@+id/btn_4"
                android:layout_width="100dp"
                android:layout_height="98dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" />

            <ImageButton
                android:id="@+id/btn_6"
                android:layout_width="100dp"
                android:layout_height="98dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true" />
        </RelativeLayout>

    </RelativeLayout>



</RelativeLayout>
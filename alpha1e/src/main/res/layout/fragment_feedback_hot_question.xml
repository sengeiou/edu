<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="90dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/content_background">

        <RelativeLayout
            android:id="@+id/rl_head"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingTop="5dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            >

            <ImageView
                android:id="@+id/iv_head"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_hot_question"/>

            <TextView
                android:id="@+id/tv_head_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_head"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:textColor="@color/T21"
                android:textSize="16sp"
                android:lines="1"
                android:ellipsize="end"
                android:text="@string/ui_setting_hot_question"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/A16"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_feedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_head"
            android:layout_marginBottom="47dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:splitMotionEvents="false"
            >

        </android.support.v7.widget.RecyclerView>

        <View
            android:id="@+id/v_spit"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/A16"
            android:layout_above="@+id/rl_feedback"/>

        <RelativeLayout
            android:id="@+id/rl_feedback"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            >

            <ImageView
                android:id="@+id/iv_feedback"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_feedback"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/iv_feedback"
                android:text="@string/ui_setting_idea_feedback"
                android:textSize="16sp"
                android:textColor="@color/T22"
                />


        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
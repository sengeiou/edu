<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/B5">

<ImageView
    android:id="@+id/img_cancel"
    android:layout_width="50dp"
    android:layout_height="35dp"
    android:layout_centerVertical="true"
    android:layout_marginLeft="25dp"
    android:src="@drawable/back_icon"
    />
    <TextView
    android:id="@+id/txt_base_title_name"
    android:layout_centerInParent="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/ui_cycle_title"
    android:textColor="@color/T1"
    android:textSize="18sp"
    android:visibility="invisible"
    />
    <ImageView
        android:id="@+id/btn_start_cycle"
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@color/B5"
        android:gravity="center"
        android:text="@string/ui_action_cycle_start"
        android:textColor="@color/T5"
        android:textSize="18sp"
        android:layout_marginRight="10dp"
        android:src="@drawable/ic_circle_play"
        />
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<com.ubt.alpha1e_edu.ui.custom.ScrollLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/sec_page_main" >

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="90dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="-150dp"
        android:orientation="horizontal"
        android:weightSum="2" >

        <Button
            android:id="@+id/btn_rename"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/sec_bg_rename"
            android:gravity="center"
            android:text="@string/ui_action_rename"
            android:textColor="@color/sec_page_main"
            android:textSize="16dp" />

        <Button
            android:id="@+id/btn_del"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/sec_txt_red"
            android:gravity="center"
            android:text="@string/ui_common_delete"
            android:textColor="@color/sec_page_main"
            android:textSize="16dp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/lay_logo"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true" >

        <ImageView
            android:id="@+id/action_logo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="@drawable/sec_action_logo" >
        </ImageView>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/lay_logo"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/lay_playing_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/txt_action_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/gif_playing"
                android:ellipsize="middle"
                android:singleLine="true"
                android:text="@string/hello_world"
                android:textColor="@color/sec_txt_main"
                android:textSize="16dp" />

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/gif_playing"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:src="@drawable/action_play_volum_gif"
                android:visibility="invisible" />
        </RelativeLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="5dp" >
        </View>

        <TextView
            android:id="@+id/txt_disc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="@string/hello_world"
            android:textColor="@color/sec_txt_disc"
            android:textSize="15dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="5dp" >
        </View>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/img_type_logo"
                android:layout_width="15dp"
                android:layout_height="15dp" />

            <View
                android:layout_width="5dp"
                android:layout_height="0dp" />

            <TextView
                android:id="@+id/txt_type_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/sec_txt_type"
                android:textSize="15dp" />

            <View
                android:layout_width="10dp"
                android:layout_height="0dp" />

            <ImageView
                android:id="@+id/img_time"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/sec_time_icon" />

            <View
                android:layout_width="5dp"
                android:layout_height="0dp" />

            <TextView
                android:id="@+id/txt_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/sec_txt_type"
                android:textSize="15dp" />

            <View
                android:layout_width="10dp"
                android:layout_height="0dp" />

            <ImageView
                android:id="@+id/img_scan_time"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/sec_scan_time"
                android:visibility="invisible" />

            <View
                android:layout_width="5dp"
                android:layout_height="0dp" />

            <TextView
                android:id="@+id/txt_scan_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/sec_txt_type"
                android:textSize="15dp"
                android:visibility="invisible" />
        </LinearLayout>
    </LinearLayout>

</com.ubt.alpha1e_edu.ui.custom.ScrollLayout>
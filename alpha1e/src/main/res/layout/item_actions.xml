<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="90dp"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:paddingLeft="6dp"
    android:paddingRight="2dp"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_action_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/pic1"
            android:scaleType="fitXY"
            android:layout_gravity="center"
            />
        <ImageView
            android:id="@+id/iv_action_select"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/bg_line"
            android:scaleType="fitXY"
            android:layout_gravity="center"
            android:visibility="gone"
            />


        <ImageView
            android:id="@+id/gif_play"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/laba_anim"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="24dp"
            android:visibility="gone"
            />

        <ImageView
            android:id="@+id/iv_del"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@+id/iv_action_icon"
            android:layout_marginLeft="-15dp"
            android:scaleType="fitXY"
            android:src="@drawable/btn_delete"
            android:visibility="gone"
            />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_action_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:ellipsize="end"
        android:singleLine="true"

    />




</LinearLayout>
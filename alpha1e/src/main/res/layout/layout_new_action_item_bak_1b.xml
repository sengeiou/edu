<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlRoot"
    android:layout_width="80dp"
    android:layout_height="40dp"
    >


    <RelativeLayout
        android:id="@+id/rl_normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/view_left"
            android:layout_width="0.5dp"
            android:layout_height="60dp"
            android:src="@drawable/bg_edit_drag"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            />


        <LinearLayout
            android:id="@+id/ll_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:gravity="center_vertical"
            >

            <TextView
                android:id="@+id/txt_action_frame_name_"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="@color/sec_txt_main"
                android:visibility="visible"
                android:gravity="center"
                android:singleLine="true"
                />

            <TextView
                android:id="@+id/txt_action_frame_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100ms"
                android:textColor="@color/sec_txt_disc"
                android:gravity="center"
                android:singleLine="true"
                >
            </TextView>
        </LinearLayout>

    </RelativeLayout>

    <View
        android:id="@+id/vew_play_frame_item_progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/sec_new_progress"
        android:visibility="gone" />


    <include
        layout="@layout/layout_new_edit_ation_item"/>







</RelativeLayout>
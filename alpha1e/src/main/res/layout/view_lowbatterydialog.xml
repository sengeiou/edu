<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lLayout_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="229dp"
        android:layout_height="130dp"
        android:background="@drawable/alert_backgroud"
        >
        <ImageView
            android:id="@+id/lowbattery_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/lowpowerindicator20"
            android:layout_centerInParent="true"
            android:visibility="visible"/>
        <TextView
            android:id="@+id/txt_lowBattery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:layout_below="@+id/lowbattery_icon"
            android:textAppearance="@style/ActionsSquareTab"
            android:visibility="visible" />
    </RelativeLayout>


</LinearLayout>
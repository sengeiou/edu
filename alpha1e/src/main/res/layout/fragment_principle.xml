<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/back_icon">

    </ImageView>

    <ImageView
        android:id="@+id/iv_principle_alpha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/img_principle_alpha"/>

    <RelativeLayout
        android:id="@+id/rl_dialogue_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/iv_principle_alpha"
        android:layout_marginRight="10dp"
        android:layout_marginTop="60dp"
        >
        <ImageView
            android:id="@+id/iv_dialogue_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/img_dialogue_2"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="18dp"
            android:gravity="center_vertical"
            android:text="@string/ui_setting_principle_tip_2"
            android:textColor="@color/white"
            android:textSize="12sp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_dialogue_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_principle_alpha"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="-35dp"
        >
        <ImageView
            android:id="@+id/iv_dialogue_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/img_dialogue_1"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="18dp"
            android:gravity="center_vertical"
            android:text="@string/ui_setting_principle_tip_1"
            android:textColor="@color/white"
            android:textSize="12sp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_dialogue_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        >
        <ImageView
            android:id="@+id/iv_dialogue_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/img_dialogue_3"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="18dp"
            android:gravity="center_vertical"
            android:text="@string/ui_setting_principle_tip_3"
            android:textColor="@color/white"
            android:textSize="12sp"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_next"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:minWidth="120dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="25dp"
        android:layout_marginRight="30dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:text="@string/ui_setting_common_next"
        android:background="@drawable/bg_button"
        />

</RelativeLayout>
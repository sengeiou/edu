<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/B5"
    android:layout_alignParentBottom="true"
    >
<View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:layout_alignParentTop="true"
    android:background="@color/A11"
    />
    <TextView
        android:id="@+id/txt_myaction_select_all"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:text="@string/ui_myaction_select_all"
        android:textSize="16sp"
        android:maxEms="6"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        android:textColor="@color/T1"
        />
 <ImageView
     android:id="@+id/img_myaction_select_all"
     android:layout_width="23dp"
     android:layout_height="23dp"
     android:src="@drawable/myactions_normal"
     android:layout_toRightOf="@+id/txt_myaction_select_all"
     android:layout_centerVertical="true"
     />

    <TextView
        android:id="@+id/txt_myaction_delete"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:text="@string/ui_common_delete"
        android:textSize="16sp"
        android:singleLine="true"
        android:maxEms="5"
        android:layout_toLeftOf="@+id/txt_myaction_download"
        android:paddingRight="5dp"
        android:paddingLeft="15dp"
        android:textColor="@color/T7"
        />
    <TextView
        android:id="@+id/txt_myaction_download"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_alignParentRight="true"
        android:paddingRight="20dp"
        android:paddingLeft="10dp"
        android:singleLine="true"
        android:maxEms="6"
        android:text="@string/ui_action_online_download"
        android:textSize="16sp"
        android:textColor="@color/T7"
        />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>

<com.ubt.alpha1e.ui.custom.SlideView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/feedback_swipe"
    android:background="@drawable/content_background"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/ll_operate"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:orientation="horizontal">

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_hibits_event_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <RelativeLayout
            android:id="@+id/rl_hibits_event_item"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            >

            <ImageView
                android:id="@+id/iv_event_switch"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:background="@drawable/icon_habits_switch_open"/>

            <ImageView
                android:id="@+id/iv_event_logo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_toRightOf="@+id/iv_event_switch"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:background="@drawable/icon_habits_awake_highlight"/>

            <TextView
                android:id="@+id/tv_event_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_event_logo"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:textColor="@color/T27"
                android:textSize="18sp"
                android:text="07:55"
                />

            <View
                android:id="@+id/v_split"
                android:layout_width="2dp"
                android:layout_height="18dp"
                android:layout_toRightOf="@+id/tv_event_time"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:background="@color/T27"
                />

            <TextView
                android:id="@+id/tv_event_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/v_split"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:textColor="@color/T27"
                android:textSize="18sp"
                android:lines="1"
                android:ellipsize="end"
                android:text="早餐"
                />

            <TextView style="@style/text_right_style"/>

        </RelativeLayout>

    </RelativeLayout>

</com.ubt.alpha1e.ui.custom.SlideView>


<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/ll_robot"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_centerInParent="true"
              android:gravity="center"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_hand_left"
                android:layout_width="75px"
                android:layout_height="177px"
                android:layout_marginTop="25dp"
                android:scaleType="fitCenter"
                android:src="@drawable/hand_left_selector"/>

            <ImageView
                android:id="@+id/iv_left_arrow"
                android:layout_width="80px"
                android:layout_height="80px"
                android:layout_alignBottom="@+id/iv_hand_left"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="-5dp"
                android:src="@drawable/youjiantou_4"
                android:visibility="gone"/>
        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_robot"
            android:layout_width="102px"
            android:layout_height="183px"
            android:scaleType="fitCenter"
            android:src="@drawable/img_body"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_hand_right"
                android:layout_width="75px"
                android:layout_height="177px"
                android:layout_marginTop="25dp"
                android:scaleType="fitCenter"
                android:src="@drawable/hand_right_selector"/>

            <ImageView
                android:id="@+id/iv_right_arrow"
                android:layout_width="80px"
                android:layout_height="80px"
                android:layout_alignBottom="@+id/iv_hand_right"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="5dp"
                android:src="@drawable/zuojiantou_4"
                android:visibility="gone"/>
        </RelativeLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-40dp"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/iv_leg_left"
            android:layout_width="112px"
            android:layout_height="248px"
            android:scaleType="fitCenter"
            android:src="@drawable/leg_left_selector"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_leg_right"
                android:layout_width="112px"
                android:layout_height="248px"
                android:scaleType="fitCenter"
                android:src="@drawable/leg_right_selector"/>

            <ImageView
                android:id="@+id/iv_right_leg_arrow"
                android:layout_width="100px"
                android:layout_height="100px"
                android:layout_alignBottom="@+id/iv_leg_right"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/zuojiantou_4"
                android:visibility="gone"/>
        </RelativeLayout>

    </LinearLayout>


</LinearLayout>
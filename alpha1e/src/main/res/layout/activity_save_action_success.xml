<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/B6"
    android:gravity="center_horizontal"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >

        <ImageView
            android:id="@+id/img_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="10dp"
            android:src="@drawable/icon_x"
            />

        <TextView
            android:id="@+id/txt_base_title_name"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="保存并发布"
            android:textColor="@color/T1"
            android:textSize="18sp"
            />


    </RelativeLayout>

    <ImageView
        android:layout_width="77dp"
        android:layout_height="87dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/img_save_succeed"/>


    <LinearLayout
        android:layout_marginTop="18dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/mynew_actions_selected"
            android:visibility="gone"
            />

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="@string/ui_save_action_success"
            />


    </LinearLayout>

    <TextView
        android:id="@+id/txt_to_other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center_horizontal"
        android:text="你可以在个人中心-原创 中查看动作"
        android:textSize="14sp"
        android:textColor="@color/T2"
        />

    <Button
        android:id="@+id/btn_to_other"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@drawable/btn_publick"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:gravity="center"
        android:text="发布到社区"
        android:textColor="#fff"
        android:textSize="16sp"
        />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/B6"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.TabLayout
        android:id="@+id/tabs"
        android:layout_width="250dp"
        android:layout_height="44dp"
        android:paddingLeft="5dp"
        app:tabGravity="fill"
        app:tabIndicatorColor="@color/tab_layout_select_text_color_ft"
        app:tabIndicatorHeight="0dp"
        app:tabSelectedTextColor="@color/tab_layout_select_text_color_ft"
        app:tabTextAppearance="@style/ActionsSquareTab"
        app:tabTextColor="@color/tab_layout_default_text_color_ft" />
    
    <View
        android:id="@id/view_split"
        android:layout_below="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/B5"/>


    <RelativeLayout
        android:id="@+id/rl_fragment_content"
        android:layout_below="@+id/view_split"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </RelativeLayout>

</RelativeLayout>
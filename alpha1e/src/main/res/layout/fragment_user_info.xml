<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg_user_main"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_user_main"
        >


        <com.ubt.alpha1e.ui.custom.ShapedImageView
            android:id="@+id/img_head"
            android:layout_width="77dp"
            android:layout_height="73dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/default_head"
            android:scaleType="fitXY"
            app:shape_mode="circle"/>

        <LinearLayout
            android:layout_width="285dp"
            android:layout_height="195dp"
            android:layout_below="@+id/img_head"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bg_edit_user"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.0"
                >

                <TextView
                    style="@style/text_userinfo_left_style"
                    android:layout_alignParentLeft="true"
                    android:text="昵称"/>

                <TextView
                    android:id="@+id/tv_user_name"
                    style="@style/text_userinfo_right_style"
                    android:drawableRight="@null"
                    android:text="leon"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/bg_line_color"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.0"
                >

                <TextView
                    style="@style/text_userinfo_left_style"
                    android:layout_alignParentLeft="true"
                    android:text="性别"/>

                <!-- 定义一组单选框 -->
                <RadioGroup
                    android:id="@+id/radio_group_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="22dp"
                    android:orientation="horizontal">
                    <!-- 定义两个单选框 -->
                    <RadioButton
                        android:id="@+id/male"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/radio_select_sex"
                        android:checked="true"
                        android:text="男"
                        android:textColor="@drawable/color_radiobutton"
                        android:textSize="16sp"
                        />

                    <RadioButton
                        android:id="@+id/female"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:button="@drawable/radio_select_sex"
                        android:text="女"
                        android:textColor="@drawable/color_radiobutton"
                        android:textSize="16sp"
                        />
                </RadioGroup>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/bg_line_color"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.0"
                >

                <TextView
                    style="@style/text_userinfo_left_style"
                    android:layout_alignParentLeft="true"
                    android:text="年龄"/>

                <TextView
                    android:id="@+id/tv_user_age"
                    style="@style/text_userinfo_right_style"
                    android:text="10"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/bg_line_color"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.0"
                >

                <TextView
                    style="@style/text_userinfo_left_style"
                    android:layout_alignParentLeft="true"
                    android:text="年级"/>

                <TextView
                    android:id="@+id/tv_user_grade"
                    style="@style/text_userinfo_right_style"
                    android:text="一年级"
                    />

            </RelativeLayout>

        </LinearLayout>


    </RelativeLayout>
</ScrollView>
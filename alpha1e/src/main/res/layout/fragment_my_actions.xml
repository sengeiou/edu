<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.fragment.MyActionsLocalFragment">


    <include
        android:id="@+id/sync_download_viewstub"
        layout="@layout/layout_mydowload_synchronized"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview_my_actions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sync_download_viewstub"
            android:splitMotionEvents="false"
         ></android.support.v7.widget.RecyclerView>


    <ViewStub
        android:id="@+id/empty_viewstub"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout="@layout/layout_my_actions_empty" />




</RelativeLayout>

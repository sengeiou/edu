<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/action_dialog_filter_rect"
   >


    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/ui_bluetooth_hint"
        android:textSize="16sp"
        android:padding="16dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#ECF1F4"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/tv_tip_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ui_create_cover_music"
        android:padding="16dp"
        />

    <LinearLayout
        android:id="@+id/ll_tips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        >

        <TextView
            android:id="@+id/tv_ps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tips:"
            android:textStyle="bold"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/tv_ps_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ui_create_cover_music_tips"
            />

    </LinearLayout>



    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#ECF1F4"
        android:visibility="gone"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        >

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="16dp"
            android:text="@string/ui_common_cancel"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="#2c87f1"
            android:background="@drawable/btn_alert_bg"
            />

        <View
            android:layout_width="2dp"
            android:layout_height="40dp"
            android:background="#ECF1F4"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:text="@string/ui_common_confirm"
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="#2c87f1"
            android:background="@drawable/btn_alert_bg"
            />





    </LinearLayout>






</LinearLayout>
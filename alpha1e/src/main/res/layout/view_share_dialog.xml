<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lLayout_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:gravity="bottom" >

        <LinearLayout
            android:id="@+id/ll_share"
            android:layout_width="match_parent"
            android:layout_height="128dp"
            android:background="@drawable/bg_share"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:weightSum="7">

                <LinearLayout
                    android:id="@+id/ll_share_to_ishow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_to_ishow"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:scaleType="fitXY"
                            android:src="@drawable/share_to_ishow" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_gravity="center_horizontal"
                            android:singleLine="true"
                            android:gravity="center"
                            android:text="@string/ui_square_ishow"
                            android:textColor="@color/txt_new_edtion"
                            android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_share_to_facebook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_to_face"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:scaleType="fitXY"
                            android:src="@drawable/share_to_facebook" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginTop="5dp"
                            android:layout_gravity="center_horizontal"
                            android:singleLine="true"
                            android:text="@string/ui_action_share_facebook"
                            android:textColor="@color/txt_new_edtion"
                            android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_share_to_twitter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_to_twitter"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:scaleType="fitXY"
                            android:src="@drawable/share_to_twitter" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginTop="6dp"
                            android:text="@string/ui_action_share_twitter"
                            android:textColor="@color/txt_new_edtion"
                            android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_share_to_wechat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_to_qq_weixin"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:scaleType="fitXY"
                            android:src="@drawable/share_to_wechat" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginTop="6dp"
                            android:text="@string/ui_action_share_wechat"
                            android:textColor="@color/txt_new_edtion"
                            android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_share_to_friends"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                        <ImageView
                            android:id="@+id/btn_to_qq_weixin_pengyouquan"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:scaleType="fitXY"
                            android:src="@drawable/share_to_wechat_moment_c" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center"
                            android:layout_marginTop="6dp"
                            android:singleLine="true"
                            android:text="@string/ui_action_share_timeline"
                            android:textColor="@color/txt_new_edtion"
                            android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_share_to_qq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_to_qq"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:scaleType="fitXY"
                            android:src="@drawable/share_to_qq" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginTop="6dp"
                            android:text="@string/ui_action_share_qq"
                            android:textColor="@color/txt_new_edtion"
                            android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_share_to_qq_zone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_to_qq_zone"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:scaleType="fitXY"
                            android:src="@drawable/share_to_qzone" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginTop="6dp"
                            android:text="@string/ui_action_share_qqzone"
                            android:textColor="@color/txt_new_edtion"
                            android:textSize="12sp" />
                </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_share_cancel"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:visibility="visible"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/bg_share"
            >

                <TextView
                    android:id="@+id/tv_task_finish"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:textColor="@color/A1"
                    android:textSize="18sp"
                    android:text="@string/ui_common_cancel"/>

        </RelativeLayout>

</LinearLayout>
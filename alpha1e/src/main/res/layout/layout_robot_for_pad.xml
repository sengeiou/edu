<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_robot"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_hand_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/hand_left_selector"
            android:layout_marginTop="60dp"
            android:scaleType="fitCenter"/>

        <ImageView
            android:id="@+id/iv_robot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/alpha_body"
            android:scaleType="fitCenter"/>

        <ImageView
            android:id="@+id/iv_hand_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:src="@drawable/hand_right_selector"
            android:scaleType="fitCenter"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="-90dp"
        >

        <ImageView
            android:id="@+id/iv_leg_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/leg_left_selector"
            android:scaleType="fitCenter"/>

        <ImageView
            android:id="@+id/iv_leg_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/leg_right_selector"
            android:scaleType="fitCenter"/>


    </LinearLayout>


</LinearLayout>
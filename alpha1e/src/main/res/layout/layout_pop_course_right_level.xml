<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:orientation="horizontal"

    >

    <ImageView
        android:id="@+id/iv_arraw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:src="@drawable/img_arrow_cloud"
        />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/iv_arraw"
        android:background="@drawable/img_cloud_left"
        android:gravity="center"
        android:text="时间轴"
        android:textColor="@color/white"
        android:textSize="18sp"
        />


    <TextView
        android:id="@+id/tv_know"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/tv_content"
        android:background="@drawable/btn_know"
        android:gravity="center"
        android:onClick="clickKnown"
        android:text="我知道了"

        android:textColor="@color/white"
        android:textSize="19sp"
        />


</RelativeLayout>
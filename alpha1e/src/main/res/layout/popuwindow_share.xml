<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lay_share_to"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="true"
    android:visibility="visible">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.3"
        android:background="@android:color/black"></LinearLayout>

    <TextView
        android:id="@+id/txt_share_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/lay_share_1"
        android:background="#ffffff"
        android:paddingLeft="10dp"
        android:paddingTop="15dp"
        android:text="@string/ui_action_share_title"
        android:textColor="@color/txt_share"
        android:textSize="18dp" />

    <LinearLayout
        android:id="@+id/lay_share_1"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_above="@+id/lay_share_2"
        android:background="#ffffff"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="10dp"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btn_to_face"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:background="#ffffff"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="4dp"
                android:scaleType="fitCenter"
                android:src="@drawable/share_to_facebook" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_horizontal"
                android:singleLine="true"
                android:text="@string/ui_action_share_facebook"
                android:textColor="@color/txt_new_edtion"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btn_to_twitter"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="#ffffff"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="4dp"
                android:scaleType="fitCenter"
                android:src="@drawable/share_to_twitter" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:text="@string/ui_action_share_twitter"
                android:textColor="@color/txt_new_edtion"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btn_to_qq_weixin"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="#ffffff"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="4dp"
                android:scaleType="fitCenter"
                android:src="@drawable/share_to_wechat" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:text="@string/ui_action_share_wechat"
                android:textColor="@color/txt_new_edtion"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/lay_share_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_cancel_share"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:weightSum="3">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btn_to_qq_weixin_pengyouquan"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="#ffffff"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="4dp"
                android:scaleType="fitCenter"
                android:src="@drawable/share_to_wechat_moment_c" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:singleLine="true"
                android:text="@string/ui_action_share_timeline"
                android:textColor="@color/txt_new_edtion"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btn_to_qq"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="#ffffff"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="4dp"
                android:scaleType="fitCenter"
                android:src="@drawable/share_to_qq" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:text="@string/ui_action_share_qq"
                android:textColor="@color/txt_new_edtion"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btn_to_qq_zone"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="#ffffff"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="4dp"
                android:scaleType="fitCenter"
                android:src="@drawable/share_to_qzone" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:text="@string/ui_action_share_qqzone"
                android:textColor="@color/txt_new_edtion"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageButton
                android:id="@+id/btn_to_qq_weibo"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:background="#ffffff"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="4dp"
                android:scaleType="fitCenter"
                android:src="@drawable/share_to_weibo" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="微博"
                android:textColor="@color/txt_new_edtion"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/btn_cancel_share"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="#f0f3f3"
        android:text="@string/ui_common_cancel"
        android:textColor="@color/txt_share_cancel"
        android:textSize="20dp" />

</RelativeLayout>
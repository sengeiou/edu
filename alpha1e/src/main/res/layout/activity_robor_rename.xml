<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sec_page_robot" >

    <RelativeLayout
        android:id="@+id/lay_title"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_alignParentTop="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:weightSum="4" >

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.5"
                android:background="#00000000"
                android:gravity="center_vertical|left"
                android:paddingLeft="10dp"
                android:text="@string/ui_common_cancel"
                android:textColor="@color/sec_txt_red"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/txt_base_title_name"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:ellipsize="middle"
                android:gravity="center"
                android:text="@string/hello_world"
                android:textColor="@color/sec_txt_main"
                android:textSize="22dp" />

            <Button
                android:id="@+id/btn_save"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.5"
                android:background="#00000000"
                android:gravity="center_vertical|right"
                android:paddingRight="10dp"
                android:text="@string/ui_common_save"
                android:textColor="@color/sec_txt_blue"
                android:textSize="18dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/sec_page_main" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/lay_title"
        android:layout_margin="15dp" >

        <EditText
            android:id="@+id/edt_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_edt_robot"
            android:gravity="center_vertical|left"
            android:paddingLeft="5dp"
            android:paddingRight="30dp" />

        <Button
            android:id="@+id/btn_cancel_name"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/sec_delete_icon_low" />
    </RelativeLayout>

</RelativeLayout>
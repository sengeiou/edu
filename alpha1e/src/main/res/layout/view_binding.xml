<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lLayout_bg"
    android:layout_width="300dp"
    android:layout_height="150dp"
    android:orientation="vertical"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:minWidth="300dp"
        android:minHeight="150dp"
        android:background="@drawable/alert_backgroud">
        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/ig_binding"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:src="@drawable/robot_binding"/>
        <ImageView
            android:id="@+id/user_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/ig_binding"
            android:layout_centerVertical="true"
            android:background="@drawable/img_bind_mine"/>

        <ImageView
            android:id="@+id/robot_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/ig_binding"
            android:background="@drawable/img_bind_robot"/>

        <TextView
            android:id="@+id/txt_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="绑定中..."
            android:layout_marginTop="105dp"
            android:textColor="@color/T21"
            android:textSize="16sp" />

    </RelativeLayout>

</LinearLayout>
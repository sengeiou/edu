<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_play"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <com.ubt.alpha1e.blocklycourse.videoPlayer.BlocklyVideoPlayer
        android:id="@+id/video_player"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true" />
    <RelativeLayout
        android:id="@+id/rl_go_pro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:gravity="center_horizontal"
        >

        <ImageView
            android:id="@+id/iv_go_pro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_go_pr1"
            android:scaleType="fitXY"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_go_pro"
            android:gravity="center"
            android:text="去试试"
            android:textColor="#fff"
            android:background="@drawable/ic_go_pr2"
            />

    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_pro_play_b"
        android:layout_centerInParent="true"
        android:visibility="gone"
        />

</RelativeLayout>
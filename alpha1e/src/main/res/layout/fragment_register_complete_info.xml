<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/B6"
    tools:context="com.ubt.alpha1e.ui.fragment.RegisterCompleteInfoFragment">

    <com.ubt.alpha1e.ui.custom.ShapedImageView
        android:id="@+id/img_register_complete_profile"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_width="87dp"
        android:layout_height="87dp"
        android:src="@drawable/default_head"
        app:shape_mode="circle"
        />

    <TextView
        android:id="@+id/txt_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/img_register_complete_profile"
        android:layout_centerHorizontal="true"
        android:text="@string/ui_perfect_set_head"
        android:textSize="14sp"
        android:textColor="@color/T2"
        />

    <EditText
        android:id="@+id/edt_register_complete_nick"
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:layout_below="@+id/txt_des"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_edittext_round_button"
        android:gravity="left|center_vertical"
        android:hint="@string/ui_perfect_nickname"
        android:paddingLeft="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:inputType="text"
        android:singleLine="true"
        android:textColor="@color/txt_new_edtion"
        android:textColorHint="@color/register_txt_hint"
        android:textSize="14sp" />


</RelativeLayout>

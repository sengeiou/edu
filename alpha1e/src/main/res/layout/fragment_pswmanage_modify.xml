<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/sv_main"
        android:layout_width="350dp"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:background="@drawable/content_background">

            <RelativeLayout
                android:id="@+id/rl_old_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                >

                <TextView
                    android:id="@+id/tv_old_password"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:paddingRight="5dp"
                    android:paddingLeft="5dp"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textColor="@color/T21"
                    android:text="@string/ui_setting_old_password"
                    />

                <com.ubt.alpha1e_edu.ui.custom.ClearableEditText
                    android:id="@+id/edt_old_password"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:layout_toRightOf="@+id/tv_old_password"
                    android:background="@drawable/bg_edt_round_button"
                    android:imeOptions="flagNoExtractUi"
                    android:inputType="numberPassword"
                    android:maxLength="6"
                    android:paddingLeft="10dp"
                    android:singleLine="true"
                    android:paddingRight="10dp"
                    android:textColor="@color/txt_new_edtion"
                    android:textSize="15sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_new_password"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/rl_old_password"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                >

                <TextView
                    android:id="@+id/tv_new_password"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:paddingRight="5dp"
                    android:paddingLeft="5dp"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textColor="@color/T21"
                    android:text="@string/ui_setting_new_password"
                    />

                <com.ubt.alpha1e_edu.ui.custom.ClearableEditText
                    android:id="@+id/edt_new_password"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:layout_toRightOf="@+id/tv_new_password"
                    android:background="@drawable/bg_edt_round_button"
                    android:imeOptions="flagNoExtractUi"
                    android:inputType="numberPassword"
                    android:maxLength="6"
                    android:paddingLeft="10dp"
                    android:singleLine="true"
                    android:paddingRight="10dp"
                    android:textColor="@color/txt_new_edtion"
                    android:textColorHint="@color/register_txt_hint"
                    android:textSize="16sp" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_confirm"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:minWidth="140dp"
                android:layout_above="@+id/tv_forget_password"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:text="@string/ui_common_confirm"
                android:background="@drawable/bg_button"
                />

            <TextView
                android:id="@+id/tv_forget_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:textSize="16sp"
                android:textColor="@color/T22"
                android:text="@string/ui_login_forget"
                />


        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_common_page">

    <include
        android:id="@+id/lay_title"
        layout="@layout/layout_title_back_mvp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="80dp"
        android:layout_marginLeft="80dp"
        android:fillViewport="true"
        android:padding="5dp"
        android:background="@drawable/content_background"
        android:layout_below="@+id/lay_title">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            >

            <LinearLayout
                android:id="@+id/ll_cust"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rl_cust_phone"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/bg_left_item"
                    >
                    <ImageView
                        android:id="@+id/iv_cust_phone"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/icon_contactus_phone"/>`

                    <TextView
                        android:id="@+id/tv_cust_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/iv_cust_phone"
                        android:layout_centerVertical="true"
                        android:textSize="16sp"
                        android:textColor="@color/T24"
                        android:text="@string/ui_setting_cust_phone_value" />

                </RelativeLayout>

                <View
                    android:id="@+id/view_app_spit"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/A11"
                    android:visibility="visible"/>

                <RelativeLayout
                    android:id="@+id/rl_cust_email"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/bg_left_item"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/iv_cust_email"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/icon_contactus_email"/>

                    <TextView
                        android:id="@+id/tv_cust_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/iv_cust_email"
                        android:layout_centerVertical="true"
                        android:textSize="16sp"
                        android:textColor="@color/T24"
                        android:text="@string/ui_setting_cust_email_value" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/A11"/>

                <RelativeLayout
                    android:id="@+id/rl_cust_website"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/bg_left_item"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/iv_cust_website"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/icon_contactus_website"/>

                    <TextView
                        android:id="@+id/tv_cust_website"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/iv_cust_website"
                        android:layout_centerVertical="true"
                        android:textSize="16sp"
                        android:textColor="@color/T24"
                        android:text="@string/ui_about_url" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/A11"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_icon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_cust"
                android:layout_marginTop="18dp"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@color/B6">

                <ImageView
                    android:id="@+id/iv_ubt_wechat"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ubt_wechat"></ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="10dp"
                    android:text="@string/ui_setting_scan_code_attention"
                    android:textColor="@color/T2"
                    android:textSize="16sp" />

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>
</RelativeLayout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/main_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainui">

    <!--android:background="#7fff0000"-->
    <!--<pl.droidsonroids.gif.GifImageView-->
    <ImageView
        android:id="@+id/cartoon_body_touch_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/main_robot_background"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:visibility="visible"
        />


    <!--<pl.droidsonroids.gif.GifImageView-->
    <ImageView
        android:id="@+id/cartoon_action"
        android:layout_width="215dp"
        android:layout_height="215dp"
        android:layout_above="@+id/charging"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:background="@drawable/main_robot"
       />

    <!--android:background="#ADFF2F"-->
    <!--<ImageView-->
        <!--android:id="@+id/cartoon_body_touch"-->
        <!--android:layout_width="315dp"-->
        <!--android:layout_height="315dp"-->
        <!--android:layout_centerInParent="true"-->
        <!--android:src="@drawable/main_robot"-->
       <!--/>-->


    <TextView
        android:id="@+id/right_icon"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="200dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:drawableTop="@drawable/main_remote"
        android:tag="course"
        android:text="@string/ui_main_right_icon"
        android:textSize="12sp"
       />
    <TextView
        android:id="@+id/right_icon2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="220dp"
        android:drawableTop="@drawable/main_action"
        android:tag="action"
        android:textSize="12sp"
        android:text="@string/ui_main_right_icon2"
        />
    <TextView
        android:id="@+id/right_icon3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="340dp"
        android:layout_marginTop="220dp"
        android:drawableTop="@drawable/main_programming"
        android:tag="programming"
        android:textSize="12sp"
        android:text="@string/ui_main_right_icon3"
     />
    <TextView
        android:id="@+id/right_icon4"
        android:layout_marginLeft="450dp"
        android:layout_marginTop="200dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:drawableTop="@drawable/main_community"
        android:tag="community"
        android:textSize="12sp"
        android:text="@string/ui_main_right_icon4"
         />
    <TextView
        android:id="@+id/top_icon"
        android:drawableTop="@drawable/main_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="21dp" />
    <TextView
        android:id="@+id/top_icon2"
        android:drawableTop="@drawable/main_connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_alignBaseline="@+id/top_icon"
        android:layout_toEndOf="@+id/top_icon" />
    <TextView
        android:id="@+id/top_icon2_disconnect"
        android:drawableTop="@drawable/main_connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_alignEnd="@+id/top_icon2"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/top_icon3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="10dp"
        android:drawableTop="@drawable/main_playing" />
    <EditText
        android:id="@+id/habit_alert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/main_alert"
        android:textColor="@color/white"
        android:gravity="center"
        android:cursorVisible="false"
        android:editable="false"
        android:text="" />
    <TextView
        android:id="@+id/bottom_icon"
        android:drawableTop="@drawable/main_book"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ui_main_course_center"
        android:layout_marginLeft="480dp"
        android:layout_marginTop="90dp"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:gravity="center_horizontal"
        />

    <!--android:background="#7fff0000">-->

    <TextView
        android:id="@+id/buddle_text"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="388dp"
        android:layout_marginTop="116dp"
        android:text="嗨，我是阿尔法"
        android:gravity="center"
        android:textSize="13sp"
        android:textStyle="bold"
        android:textColor="@color/tv_center_color"
        android:background="@drawable/bubbletext"
        android:visibility="invisible"
        />

    <RelativeLayout
        android:id="@+id/touch_control"
        android:layout_width="315dp"
        android:layout_height="315dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">
        <!--android:background="@color/bgColor_overlay"-->
        <ImageView
            android:id="@+id/cartoon_head"
            android:layout_width="89.5dp"
            android:layout_height="84.5dp"
            android:layout_marginLeft="112.5dp"
            android:layout_marginTop="21.5dp"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/cartoon_chest"
            android:layout_width="89.5dp"
            android:layout_height="75dp"
            android:layout_marginLeft="112.5dp"
            android:layout_marginTop="106dp"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/cartoon_left_hand"
            android:layout_width="41dp"
            android:layout_height="105.5dp"
            android:layout_marginLeft="71.5dp"
            android:layout_marginTop="106dp"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/cartoon_right_hand"
            android:layout_width="41dp"
            android:layout_height="105.5dp"
            android:layout_marginLeft="202dp"
            android:layout_marginTop="106dp"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/cartoon_left_leg"
            android:layout_width="42dp"
            android:layout_height="112dp"
            android:layout_marginLeft="112.5dp"
            android:layout_marginTop="181dp"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/cartoon_right_leg"
            android:layout_width="42dp"
            android:layout_height="112dp"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="181dp"
            android:visibility="visible" />
    </RelativeLayout>
</RelativeLayout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sec_page_main">

    <include layout="@layout/layout_title_back_right_icon" />

    <View
        android:id="@+id/v_split"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="-1dp"
        android:background="@color/A11"
        android:layout_below="@+id/lay_title"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview_custom_instruction"
        android:layout_below="@+id/v_split"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ll_custom_instruction_add"
        android:splitMotionEvents="false"
        />


    <LinearLayout
        android:id="@+id/ll_custom_instruction_add"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@color/B8"
        android:gravity="center">

        <ImageView
            android:id="@+id/iv_add"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/instruction_buttom_add"
            android:layout_marginRight="12dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/T14"
            android:textSize="16sp"
            android:text="@string/ui_instruction_add"
            />

    </LinearLayout>

</RelativeLayout>



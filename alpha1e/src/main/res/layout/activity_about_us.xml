<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/B5">

    <include
        android:id="@+id/lay_title"
        layout="@layout/layout_title_back" />

    <LinearLayout
        android:id="@+id/lay_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lay_title"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@color/B6">

        <View
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/ic_launcher"></ImageView>

        <TextView
            android:id="@+id/txt_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Alpha 1"
            android:textColor="@color/T1"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txt_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.0.0.0"
            android:textColor="@color/T1"
            android:textSize="12dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/A11"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lay_icon"
        android:layout_marginTop="9dp"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/A11"/>
        <RelativeLayout
            android:id="@+id/lay_version_info"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/bg_left_item"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/ui_about_version_introduction"
                android:textColor="@color/T1"
                android:textSize="16sp" />

            <ImageButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="#ffffff"
                android:src="@drawable/menu_right_arrow" />
        </RelativeLayout>

        <View
            android:id="@+id/view_app_spit"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/A11"
            android:visibility="visible"/>

        <RelativeLayout
            android:id="@+id/lay_app_update"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/bg_left_item"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:visibility="visible">

            <TextView
                android:id="@+id/txt_note_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/ui_about_update"
                android:textColor="@color/T1"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/img_update"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/txt_note_update"
                android:background="@drawable/read_point"
                android:visibility="gone" />

            <ImageButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="#ffffff"
                android:src="@drawable/menu_right_arrow" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/A11"/>

        <RelativeLayout
            android:id="@+id/lay_user_intrud"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/bg_left_item"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/ui_about_user_manual"
                android:textColor="@color/T1"
                android:textSize="16sp" />

            <ImageButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="#ffffff"
                android:src="@drawable/menu_right_arrow" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/A11"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="9dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/A11"/>
        <RelativeLayout
            android:id="@+id/lay_help"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/bg_left_item"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/ui_about_help"
                android:textColor="@color/T1"
                android:textSize="16sp" />

            <ImageButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="#ffffff"
                android:src="@drawable/menu_right_arrow" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/A11"/>

        <RelativeLayout
            android:id="@+id/lay_feedback"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/bg_left_item"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/ui_about_feedback"
                android:textColor="@color/T1"
                android:textSize="16sp" />

            <ImageButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="#ffffff"
                android:src="@drawable/menu_right_arrow" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/A11"
            android:visibility="gone"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_robot_web_sit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ui_about_url"
            android:textColor="@color/T2"
            android:textSize="13dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp" />

        <TextView
            android:id="@+id/txt_robot_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ui_about_copyright"
            android:textColor="@color/T2"
            android:textSize="12dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="6dp" />
    </LinearLayout>

</RelativeLayout>
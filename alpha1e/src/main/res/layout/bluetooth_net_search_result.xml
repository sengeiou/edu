<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_bluetooth_and_net">

    <RelativeLayout
        android:id="@+id/rl_tile"
        android:layout_width="match_parent"
        android:layout_height="66dp">
        <ImageButton
            android:id="@+id/ib_close"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/action_close"
            android:layout_alignParentRight="true"
            android:layout_marginRight="18dp"
            android:layout_centerVertical="true"
            android:visibility="gone"/>
        <ImageButton
            android:id="@+id/ib_help"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bluetooth_help"
            android:layout_toLeftOf="@id/ib_close"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="给机器人联网"
            android:textSize="18sp"/>
        <ImageButton
            android:id="@+id/ib_return"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/blutooth_retrun"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="18dp"
            android:layout_centerVertical="true"
            android:visibility="visible"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/rl_tile"
        android:background="#cccccc" />

    //搜索列表
    <RelativeLayout
        android:id="@+id/rl_content_wifi_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/line"
        android:visibility="visible">
        <RelativeLayout
            android:layout_width="380dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@null"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true">
            <TextView
                android:id="@+id/txt_msg"
                android:layout_below="@id/ig_phone"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:textStyle="bold"
                android:text="  可用网络列表"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:textColor="#666666"
                android:textSize="16sp"
                android:background="@null"/>
            <TextView
                android:id="@+id/line2"
                android:layout_below="@id/txt_msg"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#cccccc" />
            <android.support.v7.widget.RecyclerView
                android:layout_below="@id/line2"
                android:id="@+id/recyclerview_wifi"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </RelativeLayout>

    </RelativeLayout>

    //没有搜索到蓝牙设备
    <RelativeLayout
        android:id="@+id/rl_content_bluetooth_no_net"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/line"
        android:visibility="invisible">
        <RelativeLayout
            android:id="@+id/rl_connect_sucess"
            android:layout_width="240dp"
            android:layout_height="118dp"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true">
            <ImageView
                android:id="@+id/image2"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:background="@drawable/bluetooth_wifi_abnomal"
                android:layout_centerHorizontal="true"
                android:visibility="visible"/>
            <TextView
                android:layout_below="@id/image2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="没有可用网络\n请手动输入可用WI-FI名称"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="#666666"
                android:textSize="16sp"/>
        </RelativeLayout>
        <Button
            android:id="@+id/btn_goto_connect"
            android:layout_width="132dp"
            android:layout_height="40dp"
            android:background="@drawable/action_button_enable"
            android:gravity="center"
            android:text="去联网"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"/>
    </RelativeLayout>
</RelativeLayout>
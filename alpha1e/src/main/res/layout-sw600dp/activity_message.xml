<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/B5">

    <!--<include layout="@layout/layout_title_back_ft" />-->

    <RelativeLayout
        android:id="@+id/lay_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="@color/title_layout_bg_ft">

        <LinearLayout
            android:id="@+id/lay_base_back"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="30dp"
            android:paddingTop="10dp"
            android:visibility="visible">

            <ImageView
                android:layout_width="8dp"
                android:layout_height="18dp"
                android:background="@drawable/sec_back_path_ft"></ImageView>

            <TextView
                android:id="@+id/tv_base_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:background="#00000000"
                android:gravity="center|left"
                android:text="@string/ui_common_back"
                android:textColor="@color/title_layout_back_text_color_ft"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay_title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal"
            android:gravity="center"
            >

            <LinearLayout
                android:id="@+id/lay_message_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:minWidth="50dp"
                android:padding="0dp"
                android:gravity="center"
                android:background="@drawable/message_title_select_bg_ft">

                <TextView
                    android:id="@+id/txt_base_title_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="100dp"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:singleLine="true"
                    android:maxEms="5"
                    android:textSize="16sp"
                    android:textColor="@color/message_title_text_select_color_ft"
                    android:text="@string/ui_home_message_title"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay_notice_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:minWidth="50dp"
                android:padding="0dp"
                android:gravity="center"
                android:background="@drawable/notice_title_unselect_bg_ft">

                <TextView
                    android:id="@+id/txt_base_notice_title_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="100dp"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:singleLine="true"
                    android:maxEms="5"
                    android:textSize="16sp"
                    android:textColor="@color/message_title_text_unselect_color_ft"
                    android:text="@string/ui_information_notification"/>

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/lay_no_read_num"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_toRightOf="@+id/lay_title_name"
            android:layout_marginLeft="-10dp"
            android:layout_marginTop="5dp"
            android:visibility="gone">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/read_point"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/txt_no_read_num"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:textColor="@color/white"
                android:textSize="10sp"/>

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lay_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/lay_title">

    </RelativeLayout>

    <!--<ListView
        android:id="@+id/lst_messages"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/lay_title"
        android:divider="#00000000"
        android:dividerHeight="1dp" />

    <ImageView
        android:id="@+id/empty_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/no_message"
        android:scaleType="fitXY"
        android:layout_centerInParent="true"
        android:visibility="gone"/>-->

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dynamic_empty"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/B6"
    android:visibility="gone"
    >

    <ImageView
        android:layout_width="87dp"
        android:layout_height="87dp"
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/my_actions_empty"/>



    <TextView
        android:id="@+id/txt_unlogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textSize="14sp"
        android:textColor="@color/T2"
        />

    <Button
        android:id="@+id/btn_login"
        android:layout_height="44dp"
        android:layout_width="230dp"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_login_round_button"
        android:gravity="center"
        android:textColor="@color/T1"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btn_check_list"
        android:layout_marginTop="20dp"
        android:background="#00000000"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:textColor="@color/T5"
        android:textSize="12sp"
        />

</LinearLayout>
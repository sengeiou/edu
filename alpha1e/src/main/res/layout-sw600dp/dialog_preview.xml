<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/action_dialog_filter_rect"
    >


    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/ui_create_preview_action"
        android:textSize="16sp"
        android:padding="16dp"
        />


    <ImageView
        android:id="@+id/iv_preview_play"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_play_enable"
        android:layout_gravity="center"
        />

    <LinearLayout
        android:id="@+id/ll_tips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >


        <TextView
            android:id="@+id/tv_index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="60dp"
            android:paddingLeft="16dp"
            android:paddingRight="8dp"
            android:gravity="center"
            android:textSize="24sp"
            android:text="0"/>

        <View
            android:layout_width="2dp"
            android:layout_height="20dp"
            android:background="#003333"

            />

        <TextView
            android:id="@+id/tv_preview_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0:00"
            android:textSize="24sp"
            android:padding="8dp"
            />



    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_margin="16dp"
        >

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:text="@string/ui_common_cancel"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/tv_user_edit_color"
            android:background="@drawable/btn_alert_bg"
            />



        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:text="@string/ui_common_confirm"
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="@color/tv_user_edit_color"
            android:background="@drawable/btn_alert_bg"
            />





    </LinearLayout>






</LinearLayout>
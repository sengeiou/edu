<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <include
        android:id="@+id/layout_square_header"
        layout="@layout/actions_square_item_header" />

  <ImageView
      android:id="@+id/img_square_content"
      android:layout_width="match_parent"
      android:layout_height="194dp"
      />

    <View
        android:layout_below="@+id/video_actions_square"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/B1"/>
    <include
        android:id="@+id/layout_square_footer"
        layout="@layout/actions_square_item_footer" />

    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/B5"
        />

</LinearLayout>

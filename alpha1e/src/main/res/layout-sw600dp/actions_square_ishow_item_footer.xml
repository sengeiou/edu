<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:layout_alignParentBottom="true"
    android:orientation="horizontal"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:gravity="right|center_vertical"
    >

    <ImageView
        android:id="@+id/img_ishow_comment"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:src="@drawable/actions_square_detail_comment"/>

    <TextView
        android:id="@+id/txt_ishow_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_centerVertical="true"
        android:textSize="12sp"
        android:layout_toRightOf="@+id/img_ishow_comment"
        android:text="0"/>

    <RelativeLayout
        android:id="@+id/rl_ishow_share"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/img_ishow_item_share"
            android:layout_marginLeft="20dp"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:layout_centerVertical="true"
            android:src="@drawable/actions_square_detail_share"/>

        <TextView
            android:id="@+id/txt_square_item_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            android:textSize="12sp"
            android:layout_toRightOf="@+id/img_ishow_item_share"
            android:text="@string/ui_action_online_share"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_delete_dynamic"
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:layout_marginLeft="15dp"
        android:src="@drawable/icon_delete_dynamic"
        android:layout_gravity="center_vertical"
        />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal"
    android:weightSum="2"
    >

    <RelativeLayout
        android:id="@+id/rl_actions_square_official"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="12dp"
        android:gravity="center"
        android:background="@color/B6">

        <ImageView
            android:id="@+id/iv_actions_square_official"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/actions_square_official_ft"/>

        <TextView
            android:layout_toRightOf="@+id/iv_actions_square_official"
            android:layout_centerVertical="true"
            android:layout_marginLeft="7dp"
            android:maxLength="15"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ui_square_entry_official"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_actions_square_original"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginLeft="1dp"
        android:padding="12dp"
        android:gravity="center"
        android:background="@color/B6">

        <ImageView
            android:id="@+id/iv_actions_square_original"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/actions_square_original_ft"/>

        <TextView
            android:layout_toRightOf="@+id/iv_actions_square_original"
            android:layout_centerVertical="true"
            android:layout_marginLeft="7dp"
            android:maxLength="15"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ui_square_entry_create"/>

    </RelativeLayout>

</LinearLayout>
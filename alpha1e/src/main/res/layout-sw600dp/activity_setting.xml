<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/B5">

    <include
        android:id="@+id/lay_title"
        layout="@layout/layout_title_back_ft" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/lay_title"
        android:layout_marginTop="9dp">

        <LinearLayout
            android:id="@+id/layout_setting_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/A11"/>
            <RelativeLayout
                android:id="@+id/lay_clear_cache"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@color/B6"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="@string/ui_settings_clear_cache"
                    android:textColor="@color/T1"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/txt_cache_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/T2"
                    android:text="0M" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/A11"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="9dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/A11"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@color/B6"
                android:paddingLeft="15dp"
                android:paddingRight="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="@string/ui_settings_wifi"
                    android:textColor="@color/T1"
                    android:textSize="15sp" />

                <ImageButton
                    android:id="@+id/btn_wifi_download"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/menu_setting_select" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/A11"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@color/B6"
                android:paddingLeft="15dp"
                android:paddingRight="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="@string/ui_settings_message_remind"
                    android:textColor="@color/T1"
                    android:textSize="15sp" />

                <ImageButton
                    android:id="@+id/btn_message_note"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/menu_setting_select" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/A11"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@color/B6"
                android:paddingLeft="15dp"
                android:paddingRight="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="@string/ui_settings_play_during_charging"
                    android:textColor="@color/T1"
                    android:textSize="15sp" />

                <ImageButton
                    android:id="@+id/btn_play_chaging"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/menu_setting_select" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/A11"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@color/B6"
                android:paddingLeft="15dp"
                android:paddingRight="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="@string/ui_scan_auto_connect"
                    android:textColor="@color/T1"
                    android:textSize="15sp" />

                <ImageButton
                    android:id="@+id/btn_auto_connect"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/menu_setting_select" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/A11"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="9dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/A11"/>
            <RelativeLayout
                android:id="@+id/lay_language"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@color/B6"
                android:paddingLeft="15dp"
                android:paddingRight="10dp">

                <TextView
                    android:id="@+id/txt_language"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="@string/ui_settings_language"
                    android:textColor="@color/T1"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/img_use_language"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_marginTop="15dp"
                    android:layout_toRightOf="@+id/txt_language"
                    android:background="@drawable/read_point"
                    android:visibility="invisible"/>


                <TextView
                    android:id="@+id/txt_current_language"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/img_language"
                    android:textColor="@color/T2"
                    />

                <ImageView
                    android:id="@+id/img_language"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="#00000000"
                    android:src="@drawable/menu_right_arrow" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/A11"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="9dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/A11"/>
            <RelativeLayout
                android:id="@+id/rl_about"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@color/B6"
                android:paddingLeft="15dp"
                android:paddingRight="10dp">

                <TextView
                    android:id="@+id/tv_about"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="@string/ui_leftmenu_about"
                    android:textColor="@color/T1"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/iv_about"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="16dp"
                    android:layout_toRightOf="@+id/tv_about"
                    android:background="@drawable/read_point" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="#00000000"
                    android:src="@drawable/menu_right_arrow" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/A11"/>

            <RelativeLayout
                android:id="@+id/rl_contact_us"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@color/B6"
                android:paddingLeft="15dp"
                android:paddingRight="10dp">

                <TextView
                    android:id="@+id/tv_contact_us"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="@string/ui_contact_title"
                    android:textColor="@color/T1"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="#00000000"
                    android:src="@drawable/menu_right_arrow" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/A11"/>

            <TextView
                android:id="@+id/txt_logout_button"
                android:layout_width="280dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="34dp"
                android:layout_marginBottom="30dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/bg_login_round_button"
                android:gravity="center"
                android:text="@string/ui_settings_logout"
                android:textColor="@color/T11"
                android:textSize="18sp" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
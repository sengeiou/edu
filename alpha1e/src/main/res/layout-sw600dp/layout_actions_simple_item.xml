<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lay_logo_info"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/B6">

    <com.ubt.alpha1e.ui.custom.ShapedImageView
        android:id="@+id/img_action_logo"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        app:round_radius="16dp"
        app:shape_mode="round_rect"
        app:stroke_width="1dp"
        />

    <ImageView
        android:id="@+id/img_action_type"
        android:layout_width="25dp"
        android:layout_height="15dp"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="1dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:visibility="gone"
        android:background="@drawable/actions_official_pic"
        />

    <TextView
        android:id="@+id/txt_action_name"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/img_action_logo"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/T1"
        android:textSize="13sp" />

    <LinearLayout
        android:id="@+id/lay_download"
        android:layout_width="65dp"
        android:layout_height="25dp"
        android:layout_marginLeft="12dp"
        android:layout_below="@+id/txt_action_name"
        android:layout_toRightOf="@+id/img_action_logo"
        android:orientation="horizontal"
        android:layout_marginTop="2dp"
        android:gravity="center_vertical"
        android:background="@drawable/actions_download_bg">

        <RelativeLayout
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginLeft="7dp">

            <ImageView
                android:id="@+id/img_state"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/txt_download_progress"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/download_progress_text_color_ft"
                android:textSize="9sp"
                android:text="0%"
                android:visibility="gone" />
        </RelativeLayout>

        <TextView
            android:id="@+id/txt_square_item_down_num"
            android:layout_width="33dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="5dp"
            android:textSize="11sp"
            android:gravity="center"
            android:textColor="@color/download_number_text_color_ft"
            android:text="0"/>
    </LinearLayout>

</RelativeLayout>



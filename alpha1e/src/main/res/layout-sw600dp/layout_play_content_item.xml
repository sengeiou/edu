<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_play_content_info"
    android:background="@drawable/content_background"
    android:layout_width="match_parent"
    android:layout_height="50dp">

    <RelativeLayout
        android:id="@+id/rl_play_content_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        >

        <View
            android:id="@+id/v_left"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/tv_play_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/v_left"
            android:layout_toLeftOf="@+id/iv_select"
            android:layout_centerVertical="true"
            android:textColor="@color/tv_center_color"
            android:textSize="18sp"
            android:lines="1"
            android:ellipsize="end"
            />

        <ImageView
            android:id="@+id/iv_select"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>


</RelativeLayout>




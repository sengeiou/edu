<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ly_detail_square"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <include
        android:id="@+id/layout_square_header"
        layout="@layout/actions_square_item_header" />

    <RelativeLayout
        android:id="@+id/layout_square_main"
        android:layout_width="match_parent"
        android:layout_height="194dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        >

        <ImageView
            android:id="@+id/video_actions_square"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="194dp"
            />
        <ImageView
            android:id="@+id/img_play_actions_square"
            android:padding="10dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:src="@drawable/actions_square_detail_play"/>

        <ImageView
            android:id="@+id/img_square_content"
            android:layout_alignParentLeft="true"
            android:scaleType="fitStart"
            android:layout_width="match_parent"
            android:layout_height="194dp"
            />
        
    </RelativeLayout>

    <View
        android:layout_below="@+id/video_actions_square"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/B1"/>
    <include
        android:id="@+id/layout_square_footer"
        layout="@layout/actions_square_item_footer" />
    
    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/B5"
        />

</LinearLayout>

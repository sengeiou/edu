<resources>


    <style name="AppBaseTheme" parent="android:Theme.Light"></style>

    <style name="AppTheme" parent="AppBaseTheme"></style>

    <style name="NoDisplay" parent="android:Theme.NoDisplay"></style>

    <style name="NoTitleTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:textColor">@color/sec_txt_main</item>
        <item name="android:textColorHint">@color/sec_txt_disc</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="NoTitleThemeFullScreen" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:textColor">@color/sec_txt_main</item>
        <item name="android:textColorHint">@color/sec_txt_disc</item>
        <item name="android:textAllCaps">false</item>
    </style>


<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">

        <shape>

            <corners android:radius="5dip" />

            <gradient
                android:centerColor="@color/bg_progress_background"
                 />
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dip" />

                <gradient
                    android:angle="0"
                    android:endColor="@color/bg_progress_progress"
                    android:startColor="@color/bg_progress_progress" />
            </shape>
        </clip>
    </item>
</layer-list>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/B6"
    >

    <ImageView
        android:id="@+id/img_introduction_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/introduction_guidecontent_1"
        />

    <TextView
        android:id="@+id/txt_index_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/img_introduction_guide"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textColor="@color/LT1"
        android:textSize="21sp"/>


    <LinearLayout
        android:id="@+id/lay_introduction_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_index_1"
        android:layout_marginTop="-5dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:gravity="bottom"
        >

        <ImageView
            android:id="@+id/img_introduction_guide_grow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/introduction_guidegrow"
            />

        <TextView
            android:id="@+id/txt_index_2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="45dp"
            android:layout_marginBottom="2dp"
            android:gravity="bottom"
            android:textColor="@color/T5"
            android:textSize="16dp"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/lay_instant_experience"
        android:layout_width="108dp"
        android:layout_height="32dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/lay_introduction_des"
        android:layout_marginTop="32dp"
        android:padding="0dp"
        android:gravity="center_horizontal"
        android:background="@drawable/introduction_guide_btn_bg"
        android:visibility="gone">

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:textColor="@color/T5"
            android:textSize="15dp"
            android:gravity="center"
            android:lines="1"
            android:ellipsize="end"
            android:text="@string/ui_introduction_start"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/lay_bottom_guide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        >

        <ImageView
            android:id="@+id/img_introduction_guide_line_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:src="@drawable/introduction_guideline_sel"
            />

        <ImageView
            android:id="@+id/img_introduction_guide_line_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="40dp"
            android:src="@drawable/introduction_guideline"
            />

        <ImageView
            android:id="@+id/img_introduction_guide_line_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="40dp"
            android:src="@drawable/introduction_guideline"
            />

        <ImageView
            android:id="@+id/img_introduction_guide_line_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="40dp"
            android:src="@drawable/introduction_guideline"
            />
    </LinearLayout>

</RelativeLayout>
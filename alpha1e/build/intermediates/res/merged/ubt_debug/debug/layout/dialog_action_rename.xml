<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="260dp"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_myalert_dailog"
    android:orientation="vertical">

    <EditText
        android:id="@+id/edt_name"
        android:layout_width="240dp"
        android:layout_height="35dp"
        android:layout_margin="10dp"
        android:background="@color/sec_page_robot"
        android:gravity="center_vertical"
        android:paddingLeft="5dp"
        android:textColor="@color/sec_txt_main" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_cancel"
            android:layout_width="105dp"
            android:layout_height="match_parent"
            android:background="@drawable/bg_myalert_txt_cancel"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/ui_common_cancel"
            android:textColor="@color/sec_txt_main"
            android:textSize="16dp" />

        <View
            android:layout_width="28dp"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/txt_ok"
            android:layout_width="105dp"
            android:layout_height="match_parent"
            android:background="@drawable/bg_myalert_txt_ok"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/ui_common_confirm"
            android:textColor="@color/sec_txt_blue"
            android:textSize="16dp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:layout_alignParentBottom="true"
    android:orientation="horizontal"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:weightSum="4">

    <RelativeLayout
        android:id="@+id/rl_actions_square_like"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        >
        <ImageView
            android:id="@+id/img_square_item_like"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@drawable/actions_square_detail_like"/>

        <TextView
            android:id="@+id/txt_square_item_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/img_square_item_like"
            android:text="0"/>
        <View
            android:layout_alignParentRight="true"
            android:layout_width="1px"
            android:layout_height="28dp"
            android:layout_centerVertical="true"
            android:background="@color/B1"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_actions_square_collect"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
  >
        <ImageView
            android:layout_marginLeft="20dp"
            android:id="@+id/img_square_item_star"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_centerVertical="true"
            android:src="@drawable/actions_square_detail_favorite"/>

        <TextView
            android:id="@+id/txt_square_item_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/img_square_item_star"
            android:text="0"/>
        <View
            android:layout_alignParentRight="true"
            android:layout_width="1px"
            android:layout_height="28dp"
            android:layout_centerVertical="true"
            android:background="@color/B1"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_actions_square_share"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        >
        <ImageView
            android:layout_marginLeft="20dp"
            android:id="@+id/img_square_item_share"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_centerVertical="true"
            android:src="@drawable/actions_square_detail_share"/>

        <TextView
            android:id="@+id/txt_square_item_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            android:textSize="12sp"
            android:layout_toRightOf="@+id/img_square_item_share"
            android:text="@string/ui_action_online_share"/>
        <View
            android:layout_alignParentRight="true"
            android:layout_width="1px"
            android:layout_height="28dp"
            android:layout_centerVertical="true"
            android:background="@color/B1"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_actions_square_down"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical">

        <RelativeLayout
            android:id="@+id/rl_down_state"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_square_item_down"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_centerVertical="true"
                android:src="@drawable/actions_square_detail_download"/>
            <TextView
                android:id="@+id/txt_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0%"
                android:textColor="@color/T1"
                android:textSize="10sp"
                android:layout_centerInParent="true"
                android:visibility="invisible" />

        </RelativeLayout>


        <TextView
            android:id="@+id/txt_square_item_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/rl_down_state"
            android:text="0"/>
        <View
            android:layout_alignParentRight="true"
            android:layout_width="1px"
            android:layout_height="28dp"
            android:layout_centerVertical="true"
            android:background="@color/B7"/>

    </RelativeLayout>



</LinearLayout>
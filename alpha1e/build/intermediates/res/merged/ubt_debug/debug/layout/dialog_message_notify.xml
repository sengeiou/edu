<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dia_low_power"
    android:paddingTop="20dp" >

    <TextView
        android:id="@+id/txt_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center_horizontal"
        android:text="@string/hello_world"
        android:textColor="@color/txt_charge"
        android:textSize="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_message"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:weightSum="2"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="25dp" >

    <Button
        android:id="@+id/txt_cancel"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_weight="1"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_myalert_txt_cancel"
        android:gravity="center"
        android:text="@string/ui_common_ignore"
        android:textColor="@color/bg_message_cancel"
        android:textSize="18dp" />
    <View 
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        />

    <Button
        android:id="@+id/txt_ok"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_weight="1"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_myalert_txt_ok"
        android:gravity="center"
        android:text="@string/ui_common_confirm"
        android:textColor="@color/txt_new_edtion_ok"
        android:textSize="18dp" />
    </LinearLayout>

</RelativeLayout>
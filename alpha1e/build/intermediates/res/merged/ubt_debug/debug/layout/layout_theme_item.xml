<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/vew_top"
        android:layout_width="match_parent"
        android:layout_height="5dp" />

    <ImageView
        android:id="@+id/img_theme_icon"
        android:layout_width="@dimen/dp_theme_icon_w"
        android:layout_height="@dimen/dp_theme_icon_h"
        android:layout_below="@+id/vew_top"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:id="@+id/lay_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_theme_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:gravity="bottom"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_theme_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="middle"
            android:gravity="bottom"
            android:singleLine="true"
            android:text="@string/hello_world"
            android:textColor="@color/sec_txt_main"
            android:textSize="16sp" />

        <View
            android:layout_width="4dp"
            android:layout_height="0dp" />

        <TextView
            android:id="@+id/txt_theme_size"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:text="@string/hello_world"
            android:textColor="@color/sec_theme_size"
            android:textSize="12sp" />
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/lay_download"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_below="@+id/lay_info"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp">


        <View
            android:id="@+id/vew_txt_download_progress"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:background="@drawable/bg_btn_download_progress" />

        <TextView
            android:id="@+id/txt_download"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:background="@drawable/bg_theme_download"
            android:gravity="center"
            android:text="@string/ui_theme_download"
            android:textColor="@color/sec_txt_main"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/img_applied"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:background="@drawable/menu_theme_select_icon"
            android:visibility="gone" />


    </RelativeLayout>


</RelativeLayout>
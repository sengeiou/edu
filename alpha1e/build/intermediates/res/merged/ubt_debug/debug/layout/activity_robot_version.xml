<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sec_page_robot">

    <include layout="@layout/layout_title_back" />

    <ImageView
        android:id="@+id/img_head"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/lay_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/sec_robot_pic" />

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_head"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/ui_robot_info_version"
        android:textColor="@color/sec_txt_main"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/txt_robot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="@string/ui_robot_info_version"
        android:textColor="@color/sec_txt_main"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/txt_robot_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_robot"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="@string/ui_robot_info_version"
        android:textColor="@color/sec_txt_main"
        android:textSize="18dp" />

</RelativeLayout>
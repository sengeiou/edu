<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/lay_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="@color/this_lib_page_title"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:weightSum="3" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingLeft="10dp" >

            <Button
                android:layout_width="8dp"
                android:layout_height="fill_parent"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/this_lib_back_logo" >
            </Button>

            <Button
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:background="#00000000"
                android:text="@string/this_lib_ui_back"
                android:textColor="@android:color/white"
                android:textSize="18dp" />
        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/this_lib_ui_bind_alpha"
            android:textColor="@android:color/white"
            android:textSize="22dp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
    </LinearLayout>

    <ImageView
        android:id="@+id/img_line_spi_title"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/lay_title"
        android:background="@drawable/this_lib_write_line" >
    </ImageView>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/img_line_spi_title" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_above="@+id/lay_bottom" >

            <SurfaceView
                android:id="@+id/preview_view"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" />

            <com.google.zxing.client.android.ViewfinderView
                android:id="@+id/viewfinder_view"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/lay_bottom"
            android:layout_width="fill_parent"
            android:layout_height="130dp"
            android:layout_alignParentBottom="true"
            android:background="@color/this_lib_page_bottom" >

            <ImageView
                android:id="@+id/img_qr_code"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:background="@android:color/black" />

            <TextView
                android:id="@+id/txt_note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:text="@string/this_lib_ui_scan_here"
                android:textColor="@color/this_lib_note"
                android:textSize="20dp" >
            </TextView>

            <ImageView
                android:id="@+id/line_spi"
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/txt_note"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:layout_toLeftOf="@+id/img_qr_code"
                android:layout_toRightOf="@+id/img_qr_code"
                android:background="@drawable/this_lib_yello_line" />

            <TextView
                android:id="@+id/txt_other_way"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/line_spi"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:text="@string/this_lib_ui_bind_other_way"
                android:textColor="@color/this_lib_note_other"
                android:textSize="19dp" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>
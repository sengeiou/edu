<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlRoot"
    android:layout_width="720dp"
    android:layout_height="48dp"
    android:background="@drawable/buttonstyle_ba"
    >

    <!-- android:background="@drawable/actions_frame_selector"-->


    <View
        android:id="@+id/view_left"
        android:layout_width="0.5dp"
        android:layout_height="60dp"
        android:background="#fff"
        android:layout_alignParentRight="true"
        />


    <LinearLayout
        android:id="@+id/ll_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center_vertical"
        >

        <TextView
            android:id="@+id/txt_action_frame_name_"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="@color/sec_txt_main"
            android:textSize="16dp"
            android:visibility="visible"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/txt_action_frame_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="100ms"
            android:textColor="@color/sec_txt_disc"
            android:textSize="16dp"
            android:gravity="center"
            >
        </TextView>
    </LinearLayout>



</RelativeLayout>
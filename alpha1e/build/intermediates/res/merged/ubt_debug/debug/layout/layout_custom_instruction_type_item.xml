<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/B6">

    <RelativeLayout
        android:id="@+id/rl_instruction_type_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TextView
            android:id="@+id/tv_instruction_type"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:maxWidth="100dp"
            android:gravity="center"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="14sp"
            android:background="@drawable/bg_btn_instruction_type"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:text="@string/ui_instruction_voice_all" />

        <View
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/tv_instruction_type"/>


    </RelativeLayout>



</RelativeLayout>

